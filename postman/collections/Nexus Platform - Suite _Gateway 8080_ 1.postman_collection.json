      "name": "1. Identity Service",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const requestBody = JSON.parse(pm.request.body.raw);",
                  "pm.environment.set('temp_username', requestBody.username);",
                  "pm.environment.set('temp_password', requestBody.password);",
                  "console.log('Credentials cached for login');"
                ],
                "id": "48a447f6-9102-4192-a418-34fc173a0ce1"
              }
            }
          ],
          "id": "d7bf73ea-4093-40ee-ae1d-3bbc004d0b66",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tanuj Singh Rathaur\",\n  \"username\": \"rathaur_{{$randomInt}}\",\n  \"email\": \"tanuj{{$randomInt}}@example.com\",\n  \"password\": \"pass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/identity/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "identity",
                "auth",
                "register"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Login (Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const res = pm.response.json();",
                  "// Expected: ApiResponse { success, data { accessToken, refreshToken, username, roles } } OR data.token format",
                  "if (res && res.data) {",
                  "  if (res.data.accessToken) pm.environment.set('jwt_token', res.data.accessToken);",
                  "  if (res.data.token) pm.environment.set('jwt_token', res.data.token);",
                  "  if (res.data.username) pm.environment.set('current_username', res.data.username);",
                  "}",
                  "console.log('jwt_token:', pm.environment.get('jwt_token'));",
                  "console.log('current_username:', pm.environment.get('current_username'));"
                ],
                "id": "b487ed38-634c-480e-938e-09008200bebb"
              }
            }
          ],
          "id": "a87248ab-3adc-4772-b908-5d3cb4e1b902",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{temp_username}}\",\n  \"password\": \"{{temp_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/identity/auth/token",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "identity",
                "auth",
                "token"
              ]
            }
          },
          "response": []
        }
      ],
      "id": "eafd1bb8-486d-4f92-b365-19f655236968"
