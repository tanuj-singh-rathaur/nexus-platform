          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "id": "d00bd44a-a95b-40b1-b349-e578cc1d491b",
                "exec": [
                  "const req = pm.request.body && pm.request.body.raw ? JSON.parse(pm.request.body.raw) : {};",
                  "",
                  "pm.environment.set(\"temp_username\", req.username);",
                  "pm.environment.set(\"temp_password\", req.password);",
                  "",
                  "console.log(\"Credentials cached for login:\", req.username);",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
