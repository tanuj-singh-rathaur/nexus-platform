        {
          "name": "Login (Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "id": "e684f1c5-cc9e-4064-9949-7355d149aab9",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const res = pm.response.json();",
                  "// Expected: ApiResponse { success, data { accessToken, refreshToken, username, roles } } OR data.token format",
                  "if (res && res.data) {",
                  "  if (res.data.accessToken) pm.environment.set('jwt_token', res.data.accessToken);",
                  "  if (res.data.token) pm.environment.set('jwt_token', res.data.token);",
                  "  if (res.data.username) pm.environment.set('current_username', res.data.username);",
                  "}",
                  "console.log('jwt_token:', pm.environment.get('jwt_token'));",
                  "console.log('current_username:', pm.environment.get('current_username'));"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "id": "cce1c3da-8cb3-4979-96a5-1881778e48ea",
                "exec": [
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "id": "8c09c6e7-68e4-4b20-87a5-f9ef690714c9",
          "request": {
