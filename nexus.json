    {
      "name": "5. stats-service",
      "item": [
        {
          "name": "1. Trigger Manual Sync",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stats/sync/{{username}}?github={{githubHandle}}&leetcode={{leetcodeHandle}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stats", "sync", "{{username}}"],
              "query": [
                { "key": "github", "value": "{{githubHandle}}" },
                { "key": "leetcode", "value": "{{leetcodeHandle}}" }
              ]
            },
            "description": "Triggers the background WebFlux sync for GitHub and LeetCode. Returns 202 Accepted."
          },
          "response": []
        },
        {
          "name": "2. Get User Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stats/{{username}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stats", "{{username}}"]
            },
            "description": "Retrieves the master record, including the calculated Nexus Score and JSONB summaries."
          },
          "response": []
        },
        {
          "name": "3. Get Leaderboard",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stats/leaderboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stats", "leaderboard"]
            },
            "description": "Fetches the top 10 users ranked by their Nexus Score."
          },
          "response": []
        }
      ],
      "variable": [
        {
          "key": "baseUrl",
          "value": "http://localhost:8083",
          "type": "string"
        },
        { "key": "username", "value": "tanuj", "type": "string" },
        {
          "key": "githubHandle",
          "value": "your-github-username",
          "type": "string"
        },
        {
          "key": "leetcodeHandle",
          "value": "your-leetcode-username",
          "type": "string"
        }
